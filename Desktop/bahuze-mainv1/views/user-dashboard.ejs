<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Bahuze Dashboard</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Google Fonts and Icons -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=real_estate_agent" />
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f8f9fa;
    }

    /* Sidebar */
    .sidebar {
      background-color: #f57c00;
      color: white;
      height: 100vh;
      padding: 20px;
      position: fixed;
      width: 250px;
      z-index: 1000; /* Ensure sidebar is above other content */
    }

    .sidebar img {
      width: 100px;
      height: 100px;
      border-radius: 50%;
      margin-bottom: 15px;
    }

    .sidebar a {
      color: white;
      text-decoration: none;
      display: block;
      padding: 10px;
      margin: 5px 0;
      border-radius: 5px;
      transition: background-color 0.3s ease;
    }

    .sidebar a:hover {
      background-color: #c57f3d;
    }

    /* Header */
    .header {
      background-color: #75a4d3;
      color: white;
      padding: 10px 20px;
      margin-left: 250px; /* Offset for sidebar */
    }

    .header h1 {
      font-size: 24px;
      margin: 0;
    }

    .nav-links a {
      background-color: rgb(123, 207, 123);
      color: white;
      padding: 10px 20px;
      border-radius: 5px;
      text-decoration: none;
      transition: background-color 0.3s ease;
    }

    .nav-links a:hover {
      background-color: rgb(110, 196, 110);
    }

    /* Main Content */
    .main-content {
      margin-left: 250px; /* Offset for sidebar */
      padding: 20px;
    }

    /* Profile Section */
    .profile-card {
      background-color: white;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      text-align: center;
      max-width: 600px;
      margin: 0 auto;
    }

    .profile-card img {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      margin-bottom: 15px;
    }

    .profile-card h2 {
      font-size: 24px;
      margin-bottom: 10px;
    }

    .profile-card p {
      font-size: 16px;
      margin-bottom: 10px;
    }

    .profile-card button {
      background-color: #1976d2;
      color: white;
      border: none;
      padding: 10px 20px;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .profile-card button:hover {
      background-color: #135ba1;
    }

    /* Property Section */
    .property-card {
      background-color: white;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      margin-bottom: 20px;
    }

    .property-card img {
      width: 100%;
      border-radius: 10px;
      margin-bottom: 15px;
    }

    .property-card h3 {
      font-size: 20px;
      margin-bottom: 10px;
    }

    .property-card p {
      font-size: 14px;
      margin-bottom: 10px;
    }

    .property-card button {
      background-color: #1976d2;
      color: white;
      border: none;
      padding: 10px 20px;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .property-card button:hover {
      background-color: #135ba1;
    }

    /* Messages Section */
    .message-box {
      background-color: white;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      max-width: 800px;
      margin: 0 auto;
    }

    .message-container {
      max-height: 400px;
      overflow-y: auto;
      margin-bottom: 20px;
    }

    .message {
      display: flex;
      align-items: flex-start;
      margin-bottom: 10px;
    }

    .message .user {
      background-color: #007bff;
      color: white;
      border-radius: 15px;
      padding: 8px 15px;
      max-width: 70%;
      margin-right: 10px;
    }

    .message .admin {
      background-color: #28a745;
      color: white;
      border-radius: 15px;
      padding: 8px 15px;
      max-width: 70%;
      margin-left: 10px;
    }

    .input-container {
      display: flex;
      align-items: center;
    }

    .input-container input {
      width: 90%;
      padding: 10px;
      border-radius: 25px;
      border: 1px solid #ddd;
      margin-right: 10px;
    }

    .input-container button {
      background-color: #007bff;
      color: white;
      padding: 10px 20px;
      border: none;
      border-radius: 25px;
    }

    /* Settings Section */
    .settings-card {
      background-color: white;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      max-width: 800px;
      margin: 0 auto;
    }

    .settings-card h2 {
      font-size: 24px;
      margin-bottom: 20px;
    }

    .settings-card label {
      font-weight: bold;
    }

    .settings-card input {
      width: 100%;
      padding: 10px;
      border-radius: 5px;
      border: 1px solid #ddd;
      margin-bottom: 15px;
    }

    .settings-card button {
      background-color: #1976d2;
      color: white;
      border: none;
      padding: 10px 20px;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .settings-card button:hover {
      background-color: #135ba1;
    }

    /* Footer */
    footer {
      text-align: center;
      padding: 10px;
      background-color: #f4f4f4;
      margin-left: 250px; /* Offset for sidebar */
    }

    /* Responsive Design */
    @media (max-width: 767px) {
      .sidebar {
        width: 100%;
        height: auto;
        position: relative;
        margin-bottom: 20px;
      }

      .header {
        margin-left: 0;
      }

      .main-content {
        margin-left: 0;
      }

      footer {
        margin-left: 0;
      }

      .profile-card,
      .property-card,
      .message-box,
      .settings-card {
        max-width: 100%;
      }

      .input-container input {
        width: 80%;
      }
    }
  </style>
</head>
<body>
  <!-- Sidebar -->
  <aside class="sidebar">
    <img src="assets/img/app-icon-person-64.png" alt="Profile Picture">
    <h3> fullName </h3>
    <p>tel </p>
    <a href="#" data-page="profile">Profile</a>
    <a href="#" data-page="properties">
      <span class="material-symbols-outlined">real_estate_agent</span> My Properties
    </a>
    <a href="#" data-page="messages">Clients Messages</a>
    <a href="#" data-page="settings">Settings</a>
  </aside>

  <!-- Header -->
  <header class="header d-flex justify-content-between align-items-center">
    <h1>Bahuze</h1>
    <div class="nav-links d-flex align-items-center gap-3">
      <a href="/add-property">‚ûï Create Property</a>
      <a href="/">üè° Home</a>
      <div class="small-profile d-flex align-items-center gap-2">
        <img src="assets/img/app-icon-person-64.png" alt="Profile Picture" class="rounded-circle">
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="main-content">
    <!-- Profile Section -->
    <div id="profile" class="content-section active">
      <div class="profile-card">
        <h2>Profile</h2>
        <img src="assets/img/app-icon-person-64.png" alt="Profile Picture">
        <p><strong>Names:</strong> fullName </p>
        <p><strong>Telephone number:</strong> tel</p>
        <p><strong>Email:</strong> email </p>
        <button class="btn btn-primary">Change Profile</button>
      </div>
    </div>

    <!-- My Properties Section -->
    <div id="properties" class="content-section">
      <h2>My Properties</h2>
      <div class="property-card">
        <img src="property1.jpg" alt="Property Image">
        <h3>Luxury Apartment</h3>
        <p><strong>Location:</strong> Kigali, Rwanda</p>
        <p><strong>Price:</strong> $200,000</p>
        <button class="btn btn-primary">View Details</button>
      </div>
      <div class="property-card">
        <img src="property2.jpg" alt="Property Image">
        <h3>Modern Villa</h3>
        <p><strong>Location:</strong> Nairobi, Kenya</p>
        <p><strong>Price:</strong> $350,000</p>
        <button class="btn btn-primary">View Details</button>
      </div>
    </div>

    <!-- Clients Messages Section -->
    <div id="messages" class="content-section">
      <h2>Clients Messages</h2>
      <div class="message-box">
        <div class="message-container" id="message-container">
          <div class="message">
            <div class="user">Hello, I'm interested in your property.</div>
          </div>
          <div class="message">
            <div class="admin">Thank you for your message! How can I assist you?</div>
          </div>
        </div>
        <div class="input-container">
          <input type="text" id="message-input" placeholder="Type a message">
          <button onclick="sendMessage()">Send</button>
        </div>
      </div>
    </div>

    <!-- Settings Section -->
    <div id="settings" class="content-section">
      <h2>Settings</h2>
      <div class="settings-card">
        <label for="fullName">Full Name</label>
        <input type="text" id="fullName" value=" fullName ">
        <label for="email">Email</label>
        <input type="email" id="email" value=" email ">
        <label for="tel">Telephone</label>
        <input type="tel" id="tel" value=" tel">
        <input type="file" class="form-control" id="profile-picture" name="profile-picture" accept="image/*">
        <button class="btn btn-primary">Save Changes</button>
      </div>
    </div>
  </main>

  <!-- Footer -->
  <footer>
    <p>Copyright @ 2025 BAHUZE. All Rights Reserved.</p>
  </footer>

  <!-- Bootstrap JS and dependencies -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>

  <script>
    // JavaScript for toggling sections
    document.addEventListener("DOMContentLoaded", function () {
      const links = document.querySelectorAll(".sidebar a");
      const sections = document.querySelectorAll(".content-section");

      // Hide all sections except the default active one (Profile)
      sections.forEach(section => {
        if (!section.classList.contains("active")) {
          section.style.display = "none";
        }
      });

      links.forEach(link => {
        link.addEventListener("click", function (event) {
          event.preventDefault(); // Prevent page reload

          const page = this.getAttribute("data-page");

          // Hide all sections
          sections.forEach(section => {
            section.style.display = "none";
          });

          // Show selected section
          document.getElementById(page).style.display = "block";
        });
      });
    });

    // JavaScript for sending messages
    function sendMessage() {
      const messageInput = document.getElementById("message-input");
      const messageContainer = document.getElementById("message-container");
      const message = messageInput.value;

      if (message.trim() !== "") {
        // Add User's message
        const userMessage = document.createElement("div");
        userMessage.classList.add("message");
        userMessage.innerHTML = `<div class="user">${message}</div>`;
        messageContainer.appendChild(userMessage);

        // Clear the input field
        messageInput.value = "";

        // Scroll to the bottom of the message container
        messageContainer.scrollTop = messageContainer.scrollHeight;

        // Simulate Admin's response
        setTimeout(() => {
          const adminMessage = document.createElement("div");
          adminMessage.classList.add("message");
          adminMessage.innerHTML = `<div class="admin">Thank you for your message!</div>`;
          messageContainer.appendChild(adminMessage);
          messageContainer.scrollTop = messageContainer.scrollHeight;
        }, 1000);
      }
    }
  </script>
</body>
</html>